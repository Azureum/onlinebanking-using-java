<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SiteHitCounter</filter-name>
        <filter-class>bank.SiteHitCounter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SiteHitCounter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>bank.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BankingB</servlet-name>
        <servlet-class>onlinebanking.BankingB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BankingBLocal</servlet-name>
        <servlet-class>onlinebanking.BankingBLocal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Transact</servlet-name>
        <servlet-class>bank.Transact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Err</servlet-name>
        <servlet-class>bank.Err</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationData</servlet-name>
        <servlet-class>bank.RegistrationData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Editprofile</servlet-name>
        <servlet-class>bank.Editprofile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Editaddress</servlet-name>
        <servlet-class>bank.Editaddress</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BankingB</servlet-name>
        <url-pattern>/BankingB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BankingBLocal</servlet-name>
        <url-pattern>/BankingBLocal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Transact</servlet-name>
        <url-pattern>/Transact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Editprofile</servlet-name>
        <url-pattern>/Editprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Editaddress</servlet-name>
        <url-pattern>/Editaddress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Err</servlet-name>
        <url-pattern>/Err</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationData</servlet-name>
        <url-pattern>/RegistrationData</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
